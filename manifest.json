// manifest
{
  "manifest_version": 2,
  "name": "TSPi Appian Developer Tools",
  "version": "1.1",
  "description": "Helpful tools for developing in Appian",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js"]
    },
    {
      "matches": ["<all_urls>"],
      "js": ["js/helperFunctions.js"]
    }
  ],
  "icons": {"16": "icon.png"},
  "background": {
    "persistent": true,
    "scripts": ["js/background.js"]
  },
  "permissions": [
    "contextMenus",
    "activeTab",
    "tabs",
    "storage"
  ]
}
